generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Token {
  userId           String  @id @default("default_user")
  botAccessToken   String  // We'll rename this for clarity
  userAccessToken  String
  refreshToken     String
  expiresAt        BigInt
}

model ScheduledMessage {
  id        String @id
  channelId String
  postAt    Int
  text      String
}